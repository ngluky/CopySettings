                    </StackPanel>
                </ScrollViewer>
                <!--<ListView Margin="20,0,0,0" ItemsSource="{Binding data.floatSettings}" ItemContainerStyle="{StaticResource floatSettingTheme}"/>-->
            </TabItem>
